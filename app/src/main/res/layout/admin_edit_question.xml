<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/adminEditQToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Редактирование вопроса"
            android:titleTextColor="@android:color/white"
            android:background="@color/purple_700"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Вопрос" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ответ 1" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ответ 2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAns3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ответ 3" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAns4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ответ 4" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Номер правильного ответа" />

        <Button
            android:id="@+id/btnSaveQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
